<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
      android:id="@+id/confirm_payment"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:text="@string/confirm_payment"
      android:textSize="16sp"
      android:gravity="center"/>
    
    <View
      android:id="@+id/line_view"
      android:layout_below="@id/confirm_payment"
      android:layout_width="match_parent"
      android:layout_height="0.2dp"
      android:background="#dbdbdb" />
    
    <TextView 
       android:id="@+id/total_price"
       android:layout_below="@id/line_view"
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:layout_marginTop="15dp"
       android:text="价格：50"
       android:textSize="16sp"
       android:gravity="center"/>
    
    <RelativeLayout 
       android:id="@+id/alipay_account_layout"
       android:layout_below="@id/total_price"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp">
       
       <TextView 
           android:layout_marginLeft="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="支付宝账号"/>
       
       <TextView 
           android:layout_marginRight="5dp"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="135******71"/>       
    </RelativeLayout>
    
    <View
      android:id="@+id/line2_view"
      android:layout_below="@id/alipay_account_layout"
      android:layout_width="match_parent"
      android:layout_height="0.1dp"
      android:layout_marginTop="15dp"
      android:background="#dbdbdb" />
    
    <RelativeLayout 
       android:id="@+id/payment_method_layout"
       android:layout_below="@id/line2_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp">
       
       <TextView 
           android:layout_marginLeft="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="付款方式"/>
       
       <TextView 
           android:layout_marginRight="5dp"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="招商银行信用卡（0000）>"/>       
    </RelativeLayout>
    
    <View
      android:id="@+id/line3_view"
      android:layout_below="@id/payment_method_layout"
      android:layout_width="match_parent"
      android:layout_height="0.1dp"
      android:layout_marginTop="15dp"
      android:background="#dbdbdb" />
    
          
    <Button
        android:id="@+id/payment_at_once"
        android:layout_below="@id/line3_view"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="立刻付款"
        android:textSize="16sp"
        android:background="@drawable/confirm_payment"/>
       
</RelativeLayout>
